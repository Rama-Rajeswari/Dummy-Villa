
@model MagicVilla_Web.Models.Dto.RoomUpdateDTO

<div class="container mt-4">
    <h2 class="text-primary">Update Room</h2>
    <form asp-action="UpdateRoom" asp-controller="Room" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="RoomType" class="form-label">Room Type *</label>
                <input asp-for="RoomType" class="form-control" placeholder="Enter room type" />
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MaxGuests" class="form-label">Max Guests *</label>
                <input asp-for="MaxGuests" class="form-control" placeholder="Enter max guests" />
                <span asp-validation-for="MaxGuests" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Guest Types</label>
            <select asp-for="GuestTypeId" class="form-control" multiple>
                @if (ViewBag.GuestTypes != null)
                {
                    @foreach (var guestType in ViewBag.GuestTypes)
                    {
                        <option value="@guestType.Id">@guestType.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="GuestTypeId" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label asp-for="WeekdayPrice" class="form-label">Weekday Price *</label>
                <input asp-for="WeekdayPrice" class="form-control" placeholder="Enter weekday price" />
                <span asp-validation-for="WeekdayPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="WeekendPrice" class="form-label">Weekend Price *</label>
                <input asp-for="WeekendPrice" class="form-control" placeholder="Enter weekend price" />
                <span asp-validation-for="WeekendPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Villa</label>
            <select asp-for="VillaId" class="form-control">
                @if (ViewBag.Villas != null)
                {
                    @foreach (var villa in ViewBag.Villas)
                    {
                        <option value="@villa.Id">@villa.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="VillaId" class="text-danger"></span>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-action="IndexRoom" asp-controller="Room" class="btn btn-outline-primary w-100">‚Üê Back to List</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success w-100">Update Room</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






