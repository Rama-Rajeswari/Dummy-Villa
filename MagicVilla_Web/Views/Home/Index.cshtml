
@using Microsoft.AspNetCore.Components
@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<img class="d-block w-100" src="~/Image/dubai-villa.jpg" asp-append-version="true" alt="villa image">

<hr />

<div class="container">
    @foreach (var villa in Model)
    {
        
        <div class="row mb-4" style="border-radius:20px; border:1px solid #ffffff; padding: 20px;">
            
            <div class="col-12 col-md-4 mb-3">
                <img class="d-block w-100" style="border-radius:20px;" src="@villa.ImageUrl" alt="First slide">
            </div>
            <div class="col-12 col-md-8">
                <p class="card-title text-warning" style="font-size:xx-large">@villa.Name</p>
                <p class="card-text">
                    @((MarkupString)villa.Details)
                </p>
                <div class="row pb-3 pt-2">
                    <div class="col-12 col-md-4 mb-2">
                        <a asp-controller="Villa" asp-action="Details" asp-route-id="@villa.Id" class="btn btn-success form-control btn-block">ViewDetails</a>

                    </div>
                    <div class="col-12 col-md-4 mb-2">
                        <span class="">Max Occupancy: @villa.Occupancy adults</span><br />
                        <span class="pt-1">Villa Size: @villa.Sqft sqft</span>
                        <span class="pt-1">Destination:@villa.DestinationName</span>
                    </div>
                    <div class="col-12 col-md-4">
                        <span class="text-warning float-md-end font-weight-bold pt-1" style="font-size:25px;">
                            
                            <span style="border-bottom: 1px solid #ff6a00;">
                                
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
