@model IPagedList<MagicVilla_Web.Models.Dto.VillaDTO>
@using X.PagedList
@using X.PagedList.Mvc.Core

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary">Villa List</h1>
    </div>
    
    <div class="col text-end pt-1">
        <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary">
            <i class="bi bi-plus-square-fill"></i> Create New Villa
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Sqft</th>
                <th>Destination</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@item.Sqft</td>
                    <td>@item.DestinationName</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("IndexVilla", new { page, pageSize = ViewBag.PageSize }),
            new PagedListRenderOptions
            {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link", "custom-page-link" }
            })
    </div>

    <!-- Page Size Input and Record Info -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <p class="mb-0">
                Showing records <strong>@ViewBag.StartRecord - @ViewBag.EndRecord</strong> 
                of <strong>@ViewBag.TotalRecords</strong>
            </p>
        </div>
        <div>
            <form method="get" action="@Url.Action("IndexVilla")" class="d-flex align-items-center gap-2">
                <label for="pageSize" class="small-label">Enter Page Size:</label>
                <input type="number" id="pageSize" name="pageSize" class="form-control" value="@ViewBag.PageSize" min="1" required>
                <button type="submit" class="btn btn-outline-primary btn-sm">Set</button>
            </form>
        </div>
    </div>
</div>


