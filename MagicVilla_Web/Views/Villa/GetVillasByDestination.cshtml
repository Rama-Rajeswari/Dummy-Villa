@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<div class="container mt-4">
    <h2 class="fw-bold text-center">Villas in @ViewBag.DestinationName</h2>
    <p class="text-muted text-center">Explore luxurious villas in @ViewBag.DestinationName</p>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var villa in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="@villa.ImageUrl" class="card-img-top" alt="@villa.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-warning fw-bold">@villa.Name</h5>
                            <p class="card-text">@Html.Raw(villa.Details)</p>
                            <p><strong>Max Occupancy:</strong> @villa.Occupancy adults</p>
                            <p><strong>Size:</strong> @villa.Sqft sqft</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Villa" asp-action="Details" asp-route-id="@villa.Id" class="btn btn-success">Book Now</a>
                                <span class="text-warning fw-bold" style="font-size: 20px;">
                                     <span style="border-bottom: 1px solid #ff6a00;"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-danger">No villas found in this destination.</p>
    }
</div>
