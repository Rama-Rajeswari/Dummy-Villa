@model IEnumerable<MagicVilla_Web.Models.Dto.DestinationDTO>

<div class="container mt-4">
    <h2 class="fw-bold">Trending Destinations</h2>
    <p class="text-muted">Most popular choices for travelers</p>

    <div class="row">
        @foreach (var destination in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="@destination.ImageUrl" class="card-img-top" alt="@destination.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@destination.Name</h5>
                        <a asp-controller="Villa" asp-action="GetVillasByDestination" asp-route-destinationName="@destination.Name" class="btn btn-primary">View Villas</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
