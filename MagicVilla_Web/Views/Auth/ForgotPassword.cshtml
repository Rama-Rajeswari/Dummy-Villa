@model MagicVilla_Web.Models.Dto.ForgotPasswordDTO

<style>
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 55vh; /* Full height minus a little margin */
        padding-top: 60px; /* Keeps it away from navbar */
    }

    .reset-box {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .reset-box h4 {
        color: #3498db;
        text-align: center;
        margin-bottom: 10px;
    }

    .form-control {
        font-size: 0.9rem;
    }

    .btn-submit {
        background: linear-gradient(to right, #3498db, #2980b9);
        color: white;
        font-weight: 500;
    }
</style>

<div class="center-container">
    <form asp-action="ForgotPassword" method="post" class="reset-box">
        <h4>Reset Password</h4>

        <div asp-validation-summary="All" class="text-danger text-center mb-2"></div>

        <div class="form-group mb-2">
            <input asp-for="UserName" class="form-control" placeholder="Username" />
        </div>

        <div class="form-group mb-2">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
        </div>

        <div class="form-group mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
        </div>

        <button type="submit" class="btn btn-submit btn-sm w-100">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
